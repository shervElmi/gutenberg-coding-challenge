{
	"name": "@xwp/country-card-block",
	"version": "1.0.0",
	"private": true,
	"description": "Block rendering a card with country information.",
	"author": "XWP",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"engines": {
		"node": "16",
		"npm": ">=8"
	},
	"scripts": {
		"build": "wp-scripts build",
		"format": "npm-run-all --parallel format:*",
		"format:css": "npm run lint:css:fix",
		"format:js": "npm run lint:js:fix",
		"format:php": "npm run lint:php:fix",
		"lint": "npm-run-all --parallel lint:*",
		"lint:css": "wp-scripts lint-style",
		"lint:css:fix": "stylelint \"**/*.scss\" --fix",
		"lint:js": "wp-scripts lint-js",
		"lint:js:fix": "wp-scripts format",
		"lint:php": "composer lint",
		"lint:php:fix": "composer format",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start",
		"env": "wp-env",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.js": [
			"wp-scripts lint-js",
			"wp-scripts format"
		],
		"*.scss": "stylelint --fix",
    "*.php": "npm run lint:php:fix"
	},
	"dependencies": {
		"@wordpress/block-editor": "^8.1.1",
		"@wordpress/blocks": "^11.2.1",
		"@wordpress/components": "^19.4.0",
		"@wordpress/data": "^6.2.1",
		"@wordpress/element": "^4.1.1",
		"@wordpress/i18n": "^4.3.1",
		"@wordpress/icons": "^6.3.0",
		"prop-types": "^15.8.1"
	},
	"devDependencies": {
		"@wordpress/env": "^4.2.1",
		"@wordpress/eslint-plugin": "^10.0.1",
		"@wordpress/prettier-config": "^1.1.2",
		"@wordpress/scripts": "^21.0.0",
		"@wordpress/stylelint-config": "^20.0.1",
		"eslint": "^8.8.0",
		"eslint-plugin-jsdoc": "^39.3.2",
		"eslint-plugin-react-hooks": "^4.3.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.2",
		"npm-run-all": "^4.1.5",
    "prettier": "npm:wp-prettier@2.2.1-beta-1",
		"stylelint": "^14.9.1"
	}
}
